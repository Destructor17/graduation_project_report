% Для того, чтобы ссылки \url{https://...} переносились на новую строку
\usepackage{xurl}

\usepackage{hyperref}
\hypersetup{
  % Если colorlinks присвоить значение true, то текст гиперссылки будет выделяться цветом, а рамки не будет.
  colorlinks=true, 
  % linkcolor Цвет текста ссылок на мишени внутри документа; по умолчанию имеет значение red.
  linkcolor=black, 
  % pagecolor Цвет текста ссылок, когда мишенью внутри документа является страница; по умолчанию имеет значение red.
  pagecolor=red, 
  % filecolor Цвет текста ссылок, которые открывают локальные PDF файлы; по умолчанию имеет значение cyan.
  filecolor=cyan, 
  % citecolor Цвет библиографических ссылок, которые печатает команда \cite; по умолчанию имеет значение green.
  citecolor=cyan, 
  % urlcolor Цвет текста ссылок на ресурсы с URL; по умолчанию имеет значение magenta.
  urlcolor=magenta, 
}
